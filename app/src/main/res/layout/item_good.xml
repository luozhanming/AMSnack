<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#f5cdae"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:theme="@style/ThemeOverlay.AppCompat.Light"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_good_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:src="@mipmap/launcher" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_good_img"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/iv_good_img"
            android:layout_toRightOf="@+id/iv_good_img"
            android:background="@drawable/bg_tv1"
            android:padding="3dp"
            android:text="阿鸣"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size8" />

        <TextView
            android:id="@+id/tv_good_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_below="@+id/tv_good_name"
            android:layout_marginTop="5dp"
            android:maxLines="2"
          
            android:textSize="@dimen/text_size6" />

        <TextView
            android:id="@+id/tv_good_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_good_price"
            android:layout_alignLeft="@+id/tv_good_description"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            android:textSize="@dimen/text_size7" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:textSize="@dimen/text_size5" />

        <TextView
            android:id="@+id/tv_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_good_img"
            android:layout_alignLeft="@+id/tv_good_store"

            android:textColor="#fd7c37"
            android:textSize="@dimen/text_size1" />

        <TextView
            android:id="@+id/tv_good_sellCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_good_price"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/tv_good_price"

            android:textSize="@dimen/text_size5" />

        <ImageView
            android:id="@+id/iv_good_addCar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/tv_good_price"
            android:layout_alignParentRight="true"
            android:src="@mipmap/shoppingcar"
            android:tint="#fd7c37" />

        <CheckBox
            android:id="@+id/cb_good_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_good_addCar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:button="@drawable/cb_love" />

        <TextView
            android:id="@+id/tv_good_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_good_store"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_good_store"

            android:textSize="@dimen/text_size6" />
    </RelativeLayout>

</android.support.v7.widget.CardView>