<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#c8d4cf9f"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
        <TextView

            android:text="收货人姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size5"
            android:id="@+id/tv_receiver_name" />

        <TextView
            android:text="收货人电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_receiver_phone" />

        <TextView
            android:text="收货人地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size5"
            android:layout_below="@+id/tv_receiver_name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_receiver_address" />

        <View
            style="@style/style_line"
            android:layout_below="@+id/tv_receiver_address"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size5"
            android:text="删除"
            android:drawableLeft="@mipmap/delete"
            android:id="@+id/tv_receiver_delete"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_below="@id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size5"
            android:text="编辑"
            android:textColor="@color/black"
            android:drawableLeft="@mipmap/delete"
            android:layout_toLeftOf="@+id/tv_receiver_delete"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/tv_receiver_delete"
            android:id="@+id/tv_receiver_edit" />

        <TextView
            android:id="@+id/tv_receiver_setDefault"
            android:layout_below="@id/view"
            android:layout_marginTop="10dp"
            android:text="设为默认"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</android.support.v7.widget.CardView>