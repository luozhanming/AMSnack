<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_dialog_good_img"
        android:layout_width="160dp"
        android:layout_height="160dp" />


    <TextView
        android:text="商品名称"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_dialog_good_img"
        android:layout_toEndOf="@+id/iv_dialog_good_img"
        android:id="@+id/tv_dialog_good_name"
        android:textSize="@dimen/text_size4" />

    <TextView
        android:text="商品价格"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size5"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_dialog_good_img"
        android:layout_toEndOf="@+id/iv_dialog_good_img"
        android:id="@+id/tv_dialog_good_price"
        android:layout_below="@+id/tv_dialog_good_name" />



    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size1"
        android:text="商品总价"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
        android:id="@+id/tv_dialog_good_totalPrice" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/iv_dialog_good_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@mipmap/substract"
            android:id="@+id/btn_dialog_good_sub" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="0"
            android:inputType="number"
            android:layout_weight="2"
            android:background="@color/gray1"
            android:textSize="@dimen/text_size1"
            android:id="@+id/et_dialog_good_quantity" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:src="@mipmap/plus"
            android:id="@+id/btn_dialog_good_add" />


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn1"
        android:text="确定"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size1"
        android:textColor="@color/white"
        android:id="@+id/btn_dialog_good_comfirm" />


</LinearLayout>