<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardBackgroundColor="#f9e9b3"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_goodInCar_img"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_goodInCar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_goodInCar_img"
            android:layout_toRightOf="@+id/iv_goodInCar_img"
            android:text="商品名称"
            android:textSize="@dimen/text_size5" />

        <TextView
            android:id="@+id/tv_goodInCar_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goodInCar_img"
            android:layout_alignLeft="@+id/tv_goodInCar_name"
            android:layout_alignStart="@+id/tv_goodInCar_name"
            android:layout_marginBottom="9dp"
            android:text="商品总价"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size4" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_goodInCar_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_goodInCar_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:src="@mipmap/substract" />

            <TextView
                android:id="@+id/tv_goodInCar_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/gray1"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/text_size1" />

            <ImageButton
                android:id="@+id/btn_goodInCar_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:src="@mipmap/plus" />


        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>